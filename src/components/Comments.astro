<section class="giscus mx-auto mt-10 w-full max-w-[65ch]"></section>

<script>
    const getTheme = () => {
        const isDark = document.documentElement.classList.contains("dark");
        return isDark ? "dark" : "light";
    };

    const setGiscusTheme = () => {
        const theme = getTheme();
        const iframe = document.querySelector(
            "iframe.giscus-frame",
        ) as HTMLIFrameElement;
        if (!iframe) return;

        iframe.contentWindow?.postMessage(
            { giscus: { setConfig: { theme } } },
            "https://giscus.app",
        );
    };

    // Initial load
    const script = document.createElement("script");
    script.src = "https://giscus.app/client.js";
    script.setAttribute("data-repo", "jarodise/jarodisedotcom");
    script.setAttribute("data-repo-id", "R_kgDORAH_qQ");
    script.setAttribute("data-category", "General");
    script.setAttribute("data-category-id", "DIC_kwDORAH_qc4C1l3q");
    script.setAttribute("data-mapping", "pathname");
    script.setAttribute("data-strict", "0");
    script.setAttribute("data-reactions-enabled", "1");
    script.setAttribute("data-emit-metadata", "0");
    script.setAttribute("data-input-position", "bottom");
    script.setAttribute("data-theme", getTheme());
    script.setAttribute("data-lang", "zh-CN");
    script.setAttribute("crossorigin", "anonymous");
    script.async = true;

    const giscusSection = document.querySelector(".giscus");
    if (giscusSection) {
        giscusSection.appendChild(script);
    }

    // Observe theme changes
    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (
                mutation.type === "attributes" &&
                mutation.attributeName === "class"
            ) {
                setGiscusTheme();
            }
        });
    });

    observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
    });
</script>
