---
import ThemeToggle from "./ThemeToggle";
import Navigation from "./Navigation.astro";
import IconRss from "../assets/icons/rss.svg";
---

<header
  class="header-margin bg-background/80 border-foreground/5 sticky top-0 z-50 border-b backdrop-blur-md"
>
  <div
    class="flex flex-col items-center justify-between gap-4 py-2 md:flex-row md:gap-0"
  >
    <div class="flex w-full items-center justify-between md:w-auto">
      <a href="/" class="shrink-0 select-none">
        <img src="/logo.png" alt="Jarodise 数字游民部落" class="h-8 md:h-10" />
      </a>

      <!-- Mobile Icons -->
      <div class="flex items-center gap-3 md:hidden">
        <ThemeToggle client:idle />
        <a href="/rss.xml" aria-label="rss" title="rss">
          <IconRss class="active-foreground size-5" />
        </a>
      </div>
    </div>

    <div
      class="no-scrollbar flex w-full items-center justify-center gap-6 overflow-x-auto py-2 md:w-auto md:py-0"
    >
      <Navigation />

      <!-- Desktop Icons -->
      <div
        class="border-foreground/10 hidden h-6 items-center justify-center gap-4 border-l pl-6 md:flex"
      >
        <ThemeToggle client:idle />
        <a href="/rss.xml" aria-label="rss" title="rss">
          <IconRss class="active-foreground size-5" />
        </a>
      </div>
    </div>
  </div>
</header>
