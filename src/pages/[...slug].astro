---
import { render, getCollection } from "astro:content";
import BlogLayout from "../layouts/BlogLayout.astro";
import type { BlogType } from "../content.config";

export async function getStaticPaths() {
  const blogs: BlogType[] = await getCollection("blogs");
  const blogs_ = blogs.map((blog) => {
    const content = blog.body ?? "";
    const enWords = content.match(/\w+/g)?.length || 0;
    const cjkChars = content.match(/[\u4e00-\u9fa5]/g)?.length || 0;
    const count = enWords + cjkChars;
    const minutes = Math.ceil(count / 200);

    return { ...blog, data: { ...blog.data, readTime: minutes } };
  });
  return blogs_.map((blog: BlogType) => ({
    params: { slug: blog.data.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props;
const { Content, headings } = await render(blog);
---

<BlogLayout
  frontmatter={blog.data}
  headings={headings}
  readTime={blog.data.readTime}
>
  <Content />
</BlogLayout>
